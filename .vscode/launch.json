{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: Debug API Routes",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal",
        "sourceMaps": true,
        "resolveSourceMapLocations": [
          "${workspaceFolder}/**",
          "!**/node_modules/**"
        ],
        "timeout": 30000
      }
    ]
  }